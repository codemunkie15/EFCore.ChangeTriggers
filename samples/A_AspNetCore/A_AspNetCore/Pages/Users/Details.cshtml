@page
@model A_AspNetCore.Pages.Users.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>User</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Users.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Users.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Users.DateOfBirth)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Users.DateOfBirth)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Users.Role)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Users.Role.Id)
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Users.Id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>

<h3>History</h3>

<table class="table">
    <thead>
        <tr>
            <th>Description</th>
            <th>Old Value</th>
            <th>New Value</th>
            <th>Changed at</th>
            <th>Changed by</th>
            <th>Change source</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.UserChangeEvents)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @item.OldValue
                </td>
                <td>
                    @item.NewValue
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ChangedAt)
                </td>
                <td>
                    @if (item.ChangedBy != null)
                    {
                        @Html.DisplayFor(modelItem => item.ChangedBy.Name)
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ChangeSource)
                </td>
            </tr>
        }
    </tbody>
</table>